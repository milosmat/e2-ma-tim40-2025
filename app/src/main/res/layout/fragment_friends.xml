<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/etSearch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Pretraga korisnika" />

        <Button
            android:id="@+id/btnSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trazi" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <Button
            android:id="@+id/btnShowMyQr"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Moj QR" />

        <Button
            android:id="@+id/btnScanQr"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Skeniraj QR" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/boxAlliance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp"
        android:layout_marginTop="8dp"
        android:background="#1FFFFFFF">

        <TextView
            android:id="@+id/tvAllianceTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Savez"
            android:textStyle="bold"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvAllianceInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Niste u savezu."/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/btnCreateAlliance"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Kreiraj savez" />

            <Button
                android:id="@+id/btnInviteAlliance"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Pozovi prijatelje" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/btnLeaveAlliance"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Napusti savez" />

            <Button
                android:id="@+id/btnDisbandAlliance"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Ukini savez" />
        </LinearLayout>

        <Button
            android:id="@+id/btnAllianceDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Detalji saveza"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/tvAllianceInvitesTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pozivi u savez"
            android:textStyle="bold"
            android:layout_marginTop="8dp" />

        <LinearLayout
            android:id="@+id/listAllianceInvites"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvFriends"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:paddingBottom="88dp"/>

    
</LinearLayout>
