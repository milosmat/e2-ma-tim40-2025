<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Naziv kategorije -->
        <EditText
            android:id="@+id/etCategoryName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Naziv kategorije"
            android:inputType="textPersonName"
            android:padding="12dp" />

        <!-- Preview izabrane boje -->
        <View
            android:id="@+id/viewColorPreview"
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:layout_marginTop="12dp"
            android:background="#CCCCCC" />

        <!-- Dugme za biranje boje iz palete -->
        <Button
            android:id="@+id/btnPickColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Izaberi boju"
            android:layout_marginTop="12dp" />

        <!-- (Sakriveno) polje za boju – zadržano zbog postojećeg koda -->
        <EditText
            android:id="@+id/etCategoryColor"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone" />

        <!-- Dugme za čuvanje -->
        <Button
            android:id="@+id/btnSaveCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sačuvaj kategoriju"
            android:layout_marginTop="24dp"
            android:backgroundTint="@color/buttonBlue"
            android:textColor="@android:color/white"/>
    </LinearLayout>
</ScrollView>
