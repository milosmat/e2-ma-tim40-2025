<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center_horizontal">

        <!-- Slika bosa -->
        <ImageView
            android:id="@+id/ivBoss"
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:src="@drawable/boss_idle"
            android:layout_marginTop="16dp"
            android:contentDescription="@string/boss_image" />

        <!-- HP bosa (tekst + bar) -->
        <TextView
            android:id="@+id/tvBossHpValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 / 0 HP"
            android:textSize="14sp"
            android:layout_marginTop="12dp" />

        <ProgressBar
            android:id="@+id/pbBossHp"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:max="100"
            android:progress="100"
            android:progressTint="@android:color/holo_red_dark"
            android:layout_marginTop="4dp" />

        <!-- PP igrača (tekst + bar) -->
        <TextView
            android:id="@+id/tvPlayerPpValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 PP"
            android:textSize="14sp"
            android:layout_marginTop="12dp" />

        <ProgressBar
            android:id="@+id/pbPlayerPp"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:max="100"
            android:progress="40"
            android:progressTint="@android:color/holo_blue_dark"
            android:layout_marginTop="4dp" />

        <!-- Tekst za šansu -->
        <TextView
            android:id="@+id/tvSuccessRate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Šansa za pogodak: 0%"
            android:textSize="16sp"
            android:layout_marginTop="12dp" />

        <!-- Brojač pokušaja -->
        <TextView
            android:id="@+id/tvAttempts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pokušaji: 5/5"
            android:textSize="16sp"
            android:layout_marginTop="8dp" />

        <!-- Dugme za izbor opreme -->
        <Button
            android:id="@+id/btnChooseEquipment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Izaberi opremu"
            android:layout_marginTop="12dp" />

        <!-- Dugme za napad -->
        <Button
            android:id="@+id/btnAttack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/attack"
            android:layout_marginTop="16dp" />

        <!-- Rezultat -->
        <TextView
            android:id="@+id/tvBattleLog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:gravity="center"
            android:layout_marginTop="16dp" />

        <!-- Aktivni itemi -->
        <LinearLayout
            android:id="@+id/llActiveEquipment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="12dp"
            android:visibility="visible" />

        <!-- Lottie kovčeg -->
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lavChest"
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:lottie_rawRes="@raw/chest"
            app:lottie_autoPlay="false"
            app:lottie_loop="false"
            android:visibility="gone"
 />

        <!-- Sekcija za nagrade -->
        <LinearLayout
            android:id="@+id/llRewards"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:visibility="gone">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/coin"
                android:contentDescription="@drawable/coin" />

            <TextView
                android:id="@+id/tvCoins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="x0"
                android:textSize="18sp"
                android:layout_marginStart="8dp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
