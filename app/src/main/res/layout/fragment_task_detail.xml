<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:spacing="12dp">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kategorija:" />

        <TextView
            android:id="@+id/tvDifficulty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Težina:" />

        <TextView
            android:id="@+id/tvImportance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bitnost:" />

        <TextView
            android:id="@+id/tvXpPoints"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="XP:" />

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status:" />

        <!-- Dugmad za akcije -->
        <Button
            android:id="@+id/btnMarkDone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Označi kao urađen" />

        <Button
            android:id="@+id/btnPause"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pauziraj zadatak" />

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Otkaži zadatak" />

        <Button
            android:id="@+id/btnEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Izmeni zadatak"
            android:backgroundTint="@android:color/holo_blue_dark"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/btnDelete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Obriši zadatak"
            android:textColor="@android:color/white"
            android:backgroundTint="@android:color/holo_red_dark" />

    </LinearLayout>
</ScrollView>
